<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!-- Define the model -->
    <solutionClass>Entidades.Solucao</solutionClass>
    <entityClass>Entidades.Pallet</entityClass>

    <scoreDirectorFactory>

        <scoreDefinitionType>BENDABLE</scoreDefinitionType>

        <bendableHardLevelCount>1</bendableHardLevelCount>
        <bendableSoftLevelCount>3</bendableSoftLevelCount>

        <easyScoreCalculatorClass>Entidades.Calculadores.EasyScore</easyScoreCalculatorClass>

    </scoreDirectorFactory>

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
    </constructionHeuristic>

    <localSearch>
        <termination>
            <minutesSpentLimit>5</minutesSpentLimit>
        </termination>
        <localSearchType>HILL_CLIMBING</localSearchType>
    </localSearch>

    <!-- Configure the optimization algorithms (optional) -->
    <!--
    <termination>
        ...
    </termination>
    <localSearch>
        ...
    </localSearch>
    -->
</solver>